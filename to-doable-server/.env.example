# Environment: 'dev' or 'PROD'
ENVIRONMENT=dev

# Server Configuration
PORT=3000
CLIENT_URL=http://localhost:5173

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# PostgreSQL Configuration (dev - local defaults)
# In dev mode, these defaults are used if not specified:
# PGHOST=localhost, PGPORT=5432, PGUSER=postgres, PGPASSWORD=postgres, PGDATABASE=todoable
PGHOST=localhost
PGPORT=5432
PGUSER=postgres
PGPASSWORD=postgres
PGDATABASE=todoable

# PostgreSQL Configuration (prod - Neon)
# DATABASE_URL=postgresql://user:password@host.neon.tech/dbname?sslmode=require

# AWS SES Configuration
AWS_SES_REGION=us-east-1
AWS_SES_ACCESS_KEY_ID=your-access-key
AWS_SES_SECRET_ACCESS_KEY=your-secret-key
SES_FROM_EMAIL=noreply@to-doable.com

# AWS S3 Configuration
AWS_S3_REGION=us-east-1
AWS_S3_ACCESS_KEY_ID=your-access-key
AWS_S3_SECRET_ACCESS_KEY=your-secret-key
AWS_S3_BUCKET=to-doable-avatars
